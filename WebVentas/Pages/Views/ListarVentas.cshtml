@page
@model libreria.pages.ListarVentasModel
@{
}

<h1>Lista de Ventas</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model.Ventas)
        {
            <tr>
                <td>@venta.Id</td>
                <td>@venta.Fecha</td>
                <td>@venta.Total</td>
            </tr>
        }
    </tbody>
